<Window x:Class="Test3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Test3D"
        Height="700"
        Width="860">
    <DockPanel LastChildFill="True">

        <Viewport3D Name="mainViewport" ClipToBounds="True" DockPanel.Dock="Right" Width="600" Height="600">
            <Viewport3D.Camera>
                <PerspectiveCamera
                      Position="10,5,7"
                      LookDirection="-1, -.5,-1"
                      FarPlaneDistance="100"
                      UpDirection="0,1,0"
                      NearPlaneDistance="1"
                      FieldOfView="70" >
                </PerspectiveCamera>
            </Viewport3D.Camera>
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <DirectionalLight
                Color="White"
                Direction="-2,-3,-1" />
                </ModelVisual3D.Content>
            </ModelVisual3D>
        </Viewport3D>

    </DockPanel>
</Window>
